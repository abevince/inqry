{
  "extends": ["@remix-run/eslint-config", "@remix-run/eslint-config/node", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "avoid",
        "endOfLine": "auto",
        "printWidth": 100,
        "tabWidth": 2,
        "semi": false
      }
    ]
  }
}
